<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_battery_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cadex.nebulaM.wheelchairpower.MainActivity">

        <TextView android:id="@+id/textViewBatLevelPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:textColor="@color/font_color"
            android:textSize="25sp"
            android:text="@string/battery_level" />

        <com.cadex.nebulaM.wheelchairpower.customviews.ViewBatteryLevel
            android:id="@+id/ViewBatteryLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            custom:clockwise="false"
            custom:radius="90dp"
            android:layout_gravity="center"
            />
        <TextView android:id="@+id/textViewBatHealthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewBatteryLevel"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/font_color"
            android:textSize="18sp"
            android:text="Health"
            />

        <com.cadex.nebulaM.wheelchairpower.customviews.ViewBatteryHealth
            android:id="@+id/ViewBatteryHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewBatteryLevel"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/textViewBatHealthTitle"
            custom:width="230dp"
            custom:height="25dp"
            android:layout_marginLeft="10dp"/>

        <TextView android:id="@+id/textViewBatHealthPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewBatteryLevel"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/font_color"
            android:textSize="18sp"
            android:text="@string/battery_health" />


</RelativeLayout>

