<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewFlipperMainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cadex.nebulaM.wheelchairpower.MainActivity">

    <RelativeLayout android:id="@+id/layout_battery_level"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <TextView android:id="@+id/textViewBatLevelPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:textColor="@color/font_color"
            android:textSize="25sp"
            android:text="@string/battery_level" />

        <com.cadex.nebulaM.wheelchairpower.customviews.ViewBatteryLevel
            android:id="@+id/ViewBatteryLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            custom:clockwise="false"
            custom:radius="90dp"
            android:layout_gravity="center"
            />
        <TextView android:id="@+id/textViewBatHealthPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewBatteryLevel"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/font_color"
            android:textSize="18sp"
            android:text="Health"
            />
        <com.cadex.nebulaM.wheelchairpower.customviews.ViewBatteryHealth
            android:id="@+id/ViewBatteryHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewBatteryLevel"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/textViewBatHealthPercent"
            custom:width="230dp"
            custom:height="25dp"
            android:layout_marginLeft="10dp"/>


        <Button
        android:id="@+id/displayBatteryLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="level-"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        />


        <Button
            android:id="@+id/displayBatteryLevel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="level+"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp" />

        <Button
            android:id="@+id/displayBatteryHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="health-"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
           />


        <Button
            android:id="@+id/displayBatteryHealth2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="health+"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            />



    </RelativeLayout>

    <RelativeLayout android:id="@+id/layout_battery_health"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="testViewOnBatteryHealth" />
    <Button
        android:id="@+id/batteryHealthBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:onClick="batteryHealthBack"/>
    </RelativeLayout>
</ViewFlipper>